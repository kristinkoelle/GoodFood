@model IEnumerable<Market>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Markets</h2>

<p>
    @Html.ActionLink("Add your market to our community", "Create")
</p>
@if(Model.Count()!=0)
{
    <table id="farms" class="table table-bordered table-hover table-responsive">
        <thead>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>Phone Number</th>
                <th>Website</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <td>@Html.ActionLink(m.Name, "Details", "Market", new { id = m.Id}, null)</td>
                    <td>@m.Address.AddressString</td>
                    <td>@m.WebAddress</td>



                    <td>
                        @Html.ActionLink("Edit", "Edit", "Location", new { id = m.Id }, new { @class = "btn btn-default" })
                        @Html.ActionLink("Details", "Details", "Location", new { id = m.Id }, new { @class = "btn btn-default" })


                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@section scripts
    {
    <script>
        $(document).ready(function () {
            $("#locations").DataTable();
        })
    </script>
}
